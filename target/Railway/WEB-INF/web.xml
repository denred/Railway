<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                      https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <display-name>Railway ticket Office</display-name>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <exception-type>com.epam.redkin.model.exception.ServiceException</exception-type>
        <location>/errorPage.jsp</location>
    </error-page>

    <error-page>
        <location>/generalErrorPage.jsp</location>
    </error-page>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/railway</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <jsp-config>
        <taglib>
            <taglib-uri>/WEB-INF/tags/custom.tld</taglib-uri>
            <taglib-location>/WEB-INF/tags/custom.tld</taglib-location>
        </taglib>
    </jsp-config>

    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <servlet-name>*</servlet-name>
    </filter-mapping>

    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>com.epam.redkin.web.filter.SecurityFilter</filter-class>
    </filter>

    <context-param>
        <param-name>encoding</param-name>
        <param-value>UTF-8</param-value>
    </context-param>

    <!--============================================================
   i18n support
   =============================================================-->
    <!-- this way we set the resource bundle name -->
    <context-param>
        <param-name>jakarta.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>lang</param-value>
    </context-param>

    <!-- this way we set the default locale (optional) -->
    <!-- the (preferable) browser's locale will be used if we don't set the default locale -->
    <context-param>
        <param-name>jakarta.servlet.jsp.jstl.fmt.locale</param-name>
        <param-value>ua</param-value>
    </context-param>
    <!-- supported locales -->
    <context-param>
        <param-name>locales</param-name>
        <param-value>ua en</param-value>
    </context-param>

    <!--============================================================
       Controller
   =============================================================-->
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.epam.redkin.web.controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

</web-app>
